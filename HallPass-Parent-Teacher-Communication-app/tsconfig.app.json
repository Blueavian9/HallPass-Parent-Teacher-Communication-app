{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"], // Use "ES2022" for compatibility and include "DOM" for browser types
    "module": "ESNext",
    "jsx": "react-jsx", // Ensure React compatibility
    "strict": true, // Enable all strict type checking
    "skipLibCheck": true, // Skip type checks of declaration files
    "esModuleInterop": true, // Enables compatibility with CommonJS and ES Modules
    "resolveJsonModule": true, // Allows importing JSON modules
    "moduleResolution": "node", // Use Node-style module resolution
    "allowSyntheticDefaultImports": true, // Enables default imports for modules without a default export
    "outDir": "dist", // Specify the output directory for compiled files
    "baseUrl": ".", // Base directory for resolving non-relative modules
    "paths": { // Add aliases if necessary
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "database.types.ts", "main.tsx", "public/index.ts"], // Include all files in the 'src' directory
  "exclude": ["node_modules", "dist"] // Exclude 'node_modules' and 'dist'
}
